            }
            
            .brand-feature-item {
                flex-direction: column;
                align-items: center;
                text-align: center;
            }
            
            .login-form-container {
                width: 100%;
                padding: 2rem;
            }
        }
        
        @@media (max-width: 576px) {
            .login-brand {
                display: none;
            }
            
