<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AI Helpdesk Support</title>
    
    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <!-- Modern CSS -->
    <link rel="stylesheet" href="~/css/modern.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
    
    <style>
        /* Simplified user interface styles */
        :root {
            --header-height: 64px;
            --color-primary: #0d6efd;
            --color-gray-100: #f8f9fa;
            --color-gray-200: #e9ecef;
            --color-gray-300: #dee2e6;
            --color-gray-600: #6c757d;
            --color-gray-700: #495057;
            --color-gray-800: #343a40;
            --shadow-sm: 0 1px 2px rgba(0,0,0,0.05);
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            background-color: var(--color-gray-100);
            color: var(--color-gray-800);
            margin: 0;
            padding: 0;
        }
        
        .user-header {
            height: var(--header-height);
            background-color: white;
            border-bottom: 1px solid var(--color-gray-200);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 1.5rem;
        }
        
        .brand {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-weight: 600;
            font-size: 1.25rem;
            color: var(--color-primary);
        }
        
        .brand i {
            font-size: 1.5rem;
        }
        
        .user-actions {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }
        
        .user-info {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        
        .user-name {
            font-weight: 500;
        }
        
        .logout-button {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 0.75rem;
            border-radius: 0.375rem;
            background: none;
            border: 1px solid var(--color-gray-300);
            cursor: pointer;
            transition: all 0.2s ease;
        }
        
        .logout-button:hover {
            background-color: var(--color-gray-100);
        }
        
        main {
            min-height: calc(100vh - var(--header-height));
        }
    </style>
</head>
<body>
    <header class="user-header">
        <div class="brand">
            <i class="bi bi-robot"></i>
            <span>AI Helpdesk</span>
        </div>
        <div class="user-actions">
            <div class="user-info">
                <span class="user-name">@User.Identity?.Name</span>
            </div>
            <a href="@Url.Action("Logout", "Account")" class="logout-button">
                <i class="bi bi-box-arrow-right"></i>
                <span>Sign Out</span>
            </a>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <!-- Core JavaScript Dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>